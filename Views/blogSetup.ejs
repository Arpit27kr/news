<%- include("./Layouts/header.ejs") %>
<body>
    <div class="container" style="margin:100px;" >
        <h1>Blog Setup</h1>
        <form action="" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-20">
                    <input type="text" name="blog_title" placeholder="Enter your blog tittle here" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-20">
                    <input type="file" name="blog-image" required>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-20">
                    <textarea name="description" placeholder="Enter Description" required></textarea>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-20">
                    <input type="text" name="name" placeholder="Enter Admin Name" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-20">
                    <input type="email" name="email" placeholder="Enter Email" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-20">
                    <input type="password" name="password" placeholder="Enter Password" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-20">
                    <input type="submit" class="btn btn-primary" value="Create Blog">
                </div>
            </div>
        </form>
    </div>

    <% 
        if(typeof message !== 'undefined'){
            %>
            <p style="color:red;"><%= message%></p>
            <%
        }
    %>
    </body>
<%- include("./Layouts/footer.ejs") %>