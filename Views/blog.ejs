<%- include("./Layouts/header.ejs") %>

    <div class="container px-4 px-lg-5">
    <%
    if(posts.length > 0){
        for(let i = 0 ; i< posts.length ; i++){
            %>
            <div class="row gx-4 gx-lg-5 align-items-center my-5 bg-light" style="border-style: groove; background-color: grey;">
                <div class="col-lg-7 mt-3" style="float:left; width:30%;">
                    <%
                        if(posts[i].image !== undefined && posts[i].image !== ''){
                            %>
                            <img class="img-fluid rounded mb-4 mb-lg-0" src="<%= posts[i].image %>">

                            <%
                        }
                        else{
                            %>
                            
                            <img class="img-fluid rounded mb-4 mb-lg-0" src="/Image/DEFAULTpost.png">

                            <%
                        }
                    %>
                    
                </div>
                <div class="col-lg-5 mb-2 ml-5" style="float:right; width:70%;">
                    <h1 class="front-weight-light"><%= posts[i].title %></h1>
                    <p><%= posts[i].content %></p>
                    <a class="btn btn-primary" href="/post/<%= posts[i]._id %>">Click to View</a>
                </div>
            </div>
            <%
        }
    }
    else{
       %>
        <h1>Post not available !!!</h1>
       <%   }
    %>

</div>

    <%- include("./Layouts/footer.ejs") %>